<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lucagrazioli.popularmovies.MovieDetailActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/movie_title_text_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/movie_title_top_margin"
        android:textColor="@color/material_green" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster_image_view_detail"
        android:layout_below="@+id/movie_title_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/poster_image_view_margin"
        android:layout_marginLeft="@dimen/poster_image_view_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/release_year"
        android:id="@+id/release_date_title"
        android:layout_alignTop="@+id/poster_image_view_detail"
        android:layout_alignLeft="@+id/overview_title_text_view"
        android:layout_alignStart="@+id/overview_title_text_view"
        android:layout_marginLeft="@dimen/security_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_rating"
        android:id="@+id/user_rating_title"
        android:layout_below="@+id/release_date_text_view"
        android:layout_alignLeft="@+id/user_rating_text_view"
        android:layout_alignStart="@+id/user_rating_text_view"
        android:layout_marginTop="@dimen/text_view_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/overview_title"
        android:id="@+id/overview_title_text_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_view_margin"
        android:textColor="@color/material_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/overview_text_view"
        android:layout_below="@+id/overview_title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_view_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/release_date_text_view"
        android:layout_below="@+id/release_date_title"
        android:layout_alignLeft="@+id/release_date_title"
        android:layout_alignStart="@+id/release_date_title"
        android:layout_marginTop="@dimen/text_view_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/user_rating_text_view"
        android:layout_below="@+id/user_rating_title"
        android:layout_alignLeft="@+id/release_date_text_view"
        android:layout_alignStart="@+id/release_date_text_view"
        android:layout_marginTop="@dimen/text_view_margin" />

</RelativeLayout>
